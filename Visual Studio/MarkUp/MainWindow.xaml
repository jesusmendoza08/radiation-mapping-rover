<Window x:Class="RadiationRoverControlApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RadiationRoverControlApp"
        xmlns:wv2="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
       
        mc:Ignorable="d"
        Title="Radiation Rover"
        Height="450"
        Width="800"
        KeyDown="Window_KeyDown"
        KeyUp="Window_KeyUp"
        Focusable="True"
        Loaded="Window_Loaded">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>    
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Margin = "10">
                    <TextBlock Text=" Connection:" FontSize="16"/>
            <TextBlock x:Name="ConnectionStatus"
                               Text=" Offline"
                               Foreground="Red"
                               FontSize="16"
                               FontWeight="Bold"/>
            </StackPanel>
            <Border Grid.Row="1"
                    Margin="10"
                    Background="Black"
                    CornerRadius="10">
            <wv2:WebView2 x:Name="CameraView"
              HorizontalAlignment="Stretch"
              VerticalAlignment="Stretch" />
        </Border>
        
        


    </Grid>
</Window>